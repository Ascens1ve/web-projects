doctype html 
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{name} #{surname}
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet")
        link(rel="stylesheet/less" type="text/css" href="/style/style.less")
        link(rel="stylesheet/less" type="text/css" href="/style/nav.less")
        link(rel="stylesheet/less" type="text/css" href="/style/people.less")
        link(rel="stylesheet/less" type="text/css" href="/style/friends.less")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        script(src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous")
        script(src="https://code.jquery.com/ui/1.14.1/jquery-ui.js" integrity="sha256-9zljDKpE/mQxmaR4V2cGVaQ7arF3CcXxarvgr7Sj8Uc=" crossorigin="anonymous")
        script(src="/js/less.js" type="text/javascript")
    body(class="page")
        div(class="navbar")
            img(class="navbar-icon" alt="Кот" src="/images/main-icon.webp" width="100" height="100")
            ul(class="navbar__list")
                li(class="navbar__item navbar__item_text") 
                    a(href="/people" class="navbar__item-link") Люди
        
        div(class="main")
            section(class="person-info")
                if avatar
                    img(class="person-image person-mar" src=`${serverUrl}/${avatar}` width="105" height="105")
                else
                    img(class="person-image person-mar" src='/uploads/angry-birds.jpg' width="105" height="105")
                div(class="person-ids")
                    h2(class="person-fullname person-text person-mar") #{name} #{surname}
                    h3(class="person-nickname person-text person-mar") @#{nickname}
                .line-1px
                h3(class="person-birthday person-text person-mar") Дата рождения: #{birthday}
                h3(class="person-email person-text person-mar") Почта: #{email}
                p(class="person-about person-text person-mar") #{about}
            section(class="person-posts")
                div(class="person-sections")
                    h2(class="person-posts__title pointer section-text transit" id="posts") Посты
                    h2(class="person-posts__friends pointer section-text transit" id="friends") Друзья
                    h2(class="person-posts__friends-posts section-text pointer transit" id="friends-posts") Посты друзей
                .line-2px
                div(class="content")
        script(src="/js/profile.js")